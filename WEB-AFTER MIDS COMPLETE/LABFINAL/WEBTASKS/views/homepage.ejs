<script>
  // Auto-dismiss alerts after 4 seconds
  setTimeout(() => {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
      const bsAlert = new bootstrap.Alert(alert);
      bsAlert.close();
    });
  }, 4000);

  // Continuously alternate welcome message every 3.5 seconds
  const welcomeMsg = document.getElementById('welcomeMessage');
  if (welcomeMsg) {
    const originalText = `Excellent topography<br /><span style="font-size: 0.6em; opacity: 0.8;">collection_</span>`;
    const welcomeText = welcomeMsg.innerHTML;
    let showingWelcome = true;

    setInterval(() => {
      welcomeMsg.style.transition = 'opacity 0.5s ease';
      welcomeMsg.style.opacity = '0';
      
      setTimeout(() => {
        if (showingWelcome) {
          welcomeMsg.innerHTML = originalText;
        } else {
          welcomeMsg.innerHTML = welcomeText;
        }
        showingWelcome = !showingWelcome;
        welcomeMsg.style.opacity = '1';
      }, 500);
    }, 3500);
  }
</script>

